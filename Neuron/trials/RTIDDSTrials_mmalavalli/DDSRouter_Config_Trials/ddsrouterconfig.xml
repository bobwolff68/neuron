<?xml version="1.0"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../resource/schema/rti_routing_service.xsd">

<!-- Routing Service 1: Domain Bridge -->
<routing_service name="domain_bridge_config">
	<domain_route name="dom0_to_dom1">
		<participant_1>
			<domain_id>0</domain_id>
		</participant_1>
		<participant_2>
			<domain_id>1</domain_id>
		</participant_2>
		<session name="Session">
    	    <auto_topic_route name="AllForward">
    	    	<publish_with_original_info>true</publish_with_original_info>
            	<input participant="1">
                	<creation_mode>ON_DOMAIN_AND_ROUTE_MATCH</creation_mode>
                </input>
                <output>
                	<creation_mode>ON_DOMAIN_MATCH</creation_mode>
                </output>
                </auto_topic_route>
                <auto_topic_route name="AllBackward">
                    <publish_with_original_info>true</publish_with_original_info>
                    <input participant="2">
                        <creation_mode>ON_DOMAIN_MATCH</creation_mode>
                    </input>
                    <output>
                        <creation_mode>ON_DOMAIN_AND_ROUTE_MATCH</creation_mode>
                    </output>
                </auto_topic_route>
		</session>
	</domain_route>
</routing_service>

